#!/usr/bin/env bash

docker network create traefik \
	-d bridge \
	--scope local \
	--attachable \
	--label com.docker.compose.network=traefik

docker network create registry \
	-d bridge \
	--scope local \
	--attachable \
	--label com.docker.compose.network=registry

docker network create teamcity \
	-d bridge \
	--scope local \
	--attachable \
	--label com.docker.compose.network=teamcity

docker network create monitoring \
	-d bridge \
	--scope local \
	--attachable \
	--label com.docker.compose.network=monitoring

docker-compose up -d reverse-proxy